<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/add_new_recipe_dialog_camera"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorPrimary"
        android:src="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/add_new_recipe_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/add_new_recipe_edittext_background"
        android:fontFamily="@font/courgette"
        android:hint="Név"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <RadioGroup
            android:id="@+id/add_new_recipe_dialog_season_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/add_new_recipe_dialog_season_winter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Téli" />

            <RadioButton
                android:id="@+id/add_new_recipe_dialog_season_summer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nyári" />

        </RadioGroup>

    </RelativeLayout>

    <GridView
        android:id="@+id/add_new_recipe_dialog_gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:numColumns="2" />


    <CheckBox
        android:id="@+id/add_new_recipe_dialog_diary_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:text="Tejterméket tartalmaz-e" />

    <EditText
        android:id="@+id/add_new_recipe_dialog_ingredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/add_new_recipe_edittext_background"
        android:fontFamily="@font/courgette"
        android:hint="Hozzávalók"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/add_new_recipe_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@drawable/add_new_recipe_edittext_background"
        android:fontFamily="@font/courgette"
        android:hint="Leírás"
        android:lines="3"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_new_recipe_dialog_okbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK" />

        <Button
            android:id="@+id/add_new_recipe_dialog_cancelbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mégse" />

    </LinearLayout>

</LinearLayout>